<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

	<appSettings>
    <add key="SessionsPath" value="C:\SensorSessions"/>
    <add key="T_dht_threshold" value="35"/>
    <add key="T_bmp_threshold" value="40"/>
    <add key="V_threshold" value="120"/>

	<add key="LogPath" value="invalid_rows.log"/>

	</appSettings>
	
	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="SensorBinding"
						 transferMode="Streamed"
						 maxReceivedMessageSize="65536000"
						 receiveTimeout="00:10:00"
						 sendTimeout="00:10:00"
						 openTimeout="00:01:00"
						 closeTimeout="00:01:00">
				</binding>
			</netTcpBinding>
		</bindings>
		
		<services>
			<service name="Service.SensorService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:9001" />
					</baseAddresses>
				</host>
				<endpoint
				  address="Sensor"
				  binding="netTcpBinding"
				  contract="Common.ISensorService" />
			</service>
		</services>
	</system.serviceModel>
	
</configuration>